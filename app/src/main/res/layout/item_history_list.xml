<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/historylist_parent_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/c5dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.6">
                <!--video thumbnail preview-->

                <ImageView
                    android:id="@+id/video_preview"
                    android:layout_width="@dimen/image_his_icon_width"
                    android:layout_height="@dimen/image_his_icon_height"
                    android:layout_gravity="center"
                    android:src="@drawable/no_image" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/c5dp"
                android:layout_weight="0.4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--song name-->
                    <TextView
                        android:id="@+id/song_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/c4dp"
                        android:fontFamily="@font/opensans"
                        android:maxLines="1"
                        android:textColor="@color/colorthemecombo"
                        android:textSize="@dimen/normal_textsize"
                        android:textStyle="bold" />
                    <!--artist name-->
                    <TextView
                        android:id="@+id/artist_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans"
                        android:layout_marginTop="@dimen/c4dp"
                        android:maxLines="1"
                        android:textColor="@color/teal_700"
                        android:textSize="@dimen/normal_textsize"
                        android:textStyle="bold" />
                    <!--video duration-->
                    <TextView
                        android:id="@+id/video_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans"
                        android:layout_marginTop="@dimen/c4dp"
                        android:maxLines="1"
                        android:textColor="@color/colorthemecombo"
                        android:textSize="@dimen/header_text_size" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>